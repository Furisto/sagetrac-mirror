#!/usr/bin/env sage-dist-make

COMMONMK?=spkg.mk
include $(COMMONMK)

# On some systems pexpect doesn't upgrade correctly without
# first removing the old version.
install: uninstall-hack

.PHONY: uninstall-hack
uninstall-hack:
	rm -f $(SAGE_LOCAL)/lib/python*/site-packages/pexpect.*

install:
	cd src; $(SETUP_PY_INSTALL)

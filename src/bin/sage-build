#!/usr/bin/env bash

if [ -z "$SAGE_SRC" ]; then
    echo
    echo "SAGE_SRC undefined ... exiting"
    return 1
fi

if [ "$1" = "-b" ]; then
    DO_BUILD_ALL=1
    shift
else
    DO_BUILD_ALL=0
fi

if [ $DO_BUILD_ALL = 1 ]; then
    echo "*** TOUCHING ALL CYTHON (.pyx) FILES ***"
    find "$SAGE_SRC"/sage -name "*.pyx" | xargs touch 2>/dev/null
fi

# exit on failures
set -e

# build c_lib
$MAKE -C $SAGE_SRC/c_lib

# build sage library
$MAKE -C $SAGE_SRC/sage

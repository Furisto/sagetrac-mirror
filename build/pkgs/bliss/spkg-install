#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

cd "src" &&
$MAKE &&
mv libbliss.a "$SAGE_LOCAL/lib"
mv graph.hh "$SAGE_LOCAL/include"
mv kqueue.hh "$SAGE_LOCAL/include"

if [ $? -ne 0 ]; then
    echo "An error occurred whilst building bliss"
    exit 1
fi

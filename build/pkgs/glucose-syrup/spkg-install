[ -n "$SAGE_LOCAL" ] || die 'Error: $SAGE_LOCAL not set. Source sage-env or run this script from `sage -sh`.'

cd src/simp
sdh_make rs || die "Error building glucose"
echo "Install glucose_static bin in SAGE_LOCAL/bin ..."
cp -f glucose_static "$SAGE_LOCAL"/bin && \
    chmod ugo+x "$SAGE_LOCAL"/bin/glucose_static || \
    sdh_die "Error installing glucose_static . Exiting."

cd ../parallel
sdh_make rs || die "Error building glucose-syrup"
echo "Install the glucose-syrup_static bin in SAGE_LOCAL/bin ..."
cp -f glucose-syrup_static "$SAGE_LOCAL"/bin && \
    chmod ugo+x "$SAGE_LOCAL"/bin/glucose-syrup_static || \
    sdh_die "Error installing glucose-syrup_static . Exiting."



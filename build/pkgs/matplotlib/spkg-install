if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

if [ "x$SAGE64" = xyes ]; then
   echo "Building a 64-bit version of matplotlib"
   CFLAGS="-O2 -g -m64 "; export CFLAGS
   LDFLAGS="-m64 $LDFLAGS"; export LDFLAGS
fi

# Write a configuration file to src/setup.cfg
python make-setup-config.py

# Change the default matplotlibrc to the classic one used up to version 1.5.3
# This should eventually be drooped.
mv src/matplotlibrc.template src/lib/matplotlib/mpl-data/stylelib/default-2.1.0
cp src/lib/matplotlib/mpl-data/stylelib/classic.mplstyle src/matplotlibrc.template

cd src

# Finally install
sdh_pip_install .

if [ $? -ne 0 ]; then
    echo "Error installing matplotlib package."
    exit 1
fi

#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

cp sage_tdlib.cpp src/src/
cp sage_tdlib.hpp src/src/

cd src

./configure \
    --prefix="$SAGE_LOCAL" \
    --libdir="$SAGE_LOCAL/lib" \
    --enable-shared --disable-static

$MAKE
if [ $? -ne 0 ]; then
    echo "Error building tdlib"
    exit 1
fi

$MAKE install -j1
if [ $? -ne 0 ]; then
    echo "Error installing tdlib"
    exit 1
fi

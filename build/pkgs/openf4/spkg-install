#!/usr/bin/env bash

cd src

for patch in ../patches/*.patch; do
    [ -r "$patch" ] || continue  # Skip non-existing or non-readable patches
    patch -p1 <"$patch"
    if [ $? -ne 0 ]; then
        echo >&2 "Error applying '$patch'"
        exit 1
    fi
done

./configure --prefix="$SAGE_LOCAL" --libdir="$SAGE_LOCAL/lib" \
    --with-gmp="$SAGE_LOCAL" --with-givaro="$SAGE_LOCAL"
if [ $? -ne 0 ]; then
    echo >&2 "Error configuring f4."
    exit 1
fi

$MAKE
if [ $? -ne 0 ]; then
    echo >&2 "Error building f4."
    exit 1
fi

$MAKE install
if [ $? -ne 0 ]; then
    echo >&2 "Error installing f4."
    exit 1
fi

if [ -z "$SAGE_LOCAL" ]; then
    echo "Error: SAGE_LOCAL undefined - exiting..."
    echo "Maybe run 'sage -sh'?"
    exit 1
fi

# --force-lib because we dont want sage -t to compile test-sage.py
sage -t --verbose --force-lib src/sympy/external/tests/test_sage.py

if [ $? -ne 0 ]; then
  echo "There was a problem during the sympy tests."
  exit 1
fi


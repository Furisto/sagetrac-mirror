PARTIAL_CPAN_MIRROR=`pwd`/src/sagepan
# Early prerequisites
perl src/cpanm --from="$PARTIAL_CPAN_MIRROR" --local-lib "$SAGE_LOCAL" Path::Tiny Test2::API
# --force because of a testsuite error on macOS due to path confusion
CFLAGS="$CFLAGS `xml2-config --cflags`"
export CFLAGS
perl src/cpanm --from="$PARTIAL_CPAN_MIRROR" --local-lib "$SAGE_LOCAL" --force Alien::Libxml2
perl src/cpanm --from="$PARTIAL_CPAN_MIRROR" --local-lib "$SAGE_LOCAL" XML::LibXML
perl src/cpanm --from="$PARTIAL_CPAN_MIRROR" --local-lib "$SAGE_LOCAL" XML::Writer  XML::LibXSLT File::Slurp JSON SVG MongoDB

#!/usr/bin/env bash

if [ -z "$SAGE_LOCAL" ]; then
    echo >&2 "SAGE_LOCAL undefined ... exiting"
    echo >&2 "Maybe run 'sage --sh'?"
    exit 1
fi

echo "Only installing functools for Python 2: it is not needed for Python 3."

cd src

$PIP_INSTALL -2 .

if [ $? -ne 0 ]; then
    echo "Error installing functools32 ... exiting"
    exit 1
fi

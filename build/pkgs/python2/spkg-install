# It is best to unset these environment variables, as they might confuse
# the Python installer.
unset PYTHONHOME
unset PYTHONPATH

# Prevent use of the system hg and svn as it might make the installation fail
export HAS_HG=no
export SVNVERSION=no

CUR="$(pwd)"

cd src

# Remove old libraries
rm -f "$SAGE_LOCAL"/lib/libpython2*

# Running 'make install' in parallel is a bad idea, so we use
# only 1 job.
# The "-i" option to ignore errors is crucial, especially in the
# case of upgrades.
sdh_make_install -i -j1

# Both Python 2 and Python 3 install a script called 2to3 (Python 3
# suffixes most of the scripts it installs with '3', but not 2to3, though
# it does install a 2to3-3.6) What's worse, Python 3 will override Python
# 2's 2to3 script with a symlink to 2to3-3.6.
# So we move 2to3 to 2to3-2.7, and make 2to3 a symlink to this file.  That
# way even if the symlink gets overridden the original script won't be
# deleted.
cd "${SAGE_INST_TEMP}${SAGE_LOCAL}/bin"
mv 2to3 2to3-2.7
ln -s 2to3-2.7 2to3
cd "$CUR/src"

echo "Installing valgrind suppression file..."
mkdir -p "${SAGE_INST_TEMP}${SAGE_EXTCODE}/valgrind"
cp Misc/valgrind-python.supp "${SAGE_INST_TEMP}${SAGE_EXTCODE}/valgrind/python.supp" || \
    sdh_die "Error installing valgrind suppression file."

if [ "$UNAME" = "Linux" ]; then
    export LD_LIBRARY_PATH="."
elif [ "$UNAME" = "Darwin" ]; then
    export DYLD_LIBRARY_PATH="."
fi

# When building on a case-insensitive filesystem (on any OS, not just Windows)
# the Python executable is output to the build directory as 'python.exe'
if [ -f "python.exe" ]; then
    PYTHON="./python.exe"
else
    PYTHON="./python"
fi

PYTHON_VERSION=$($PYTHON -c 'import sys; print("%d.%d" % sys.version_info[:2])')

# On OS X with XCode 4, the presence of
# $SAGE_LOCAL/lib/python2.*/config/libpython2.x.a causes problems with
# GiNaC -- see #11967.  It is easiest to test the version of OS X; we
# delete this file if using OS X 10.6 or later (so `uname -r` returns
# x.y.z with x >= 10).
if [ "$UNAME" = "Darwin" ] && \
    [ `uname -r | cut '-d.' -f1` -gt 9 ]; then
    rm -f "${SAGE_INST_TEMP}${SAGE_LOCAL}/lib/python$PYTHON_VERSION/config/libpython${PYTHON_VERSION}.a"
elif [ "$UNAME" = "CYGWIN" ]; then
    # See http://trac.sagemath.org/ticket/20437
    ln -sf "python$PYTHON_VERSION/config/libpython${PYTHON_VERSION}.dll.a" "${SAGE_INST_TEMP}/${SAGE_LOCAL}/lib/libpython${PYTHON_VERSION}.dll.a"
fi

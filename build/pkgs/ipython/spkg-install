#!/usr/bin/env bash

if [ "$SAGE_LOCAL" = "" ]; then
   echo "SAGE_LOCAL undefined ... exiting";
   echo "Maybe run 'sage -sh'?"
   exit 1
fi

cd src

# Install for Python 3 first, so that the script local/bin/ipython uses Python 2.
$PIP_INSTALL -3 .
$PIP_INSTALL -2 .

if [ $? -ne 0 ]; then
    echo >&2 "Error installing IPython"
    exit 1
fi

if [ -z "$SAGE_LOCAL" ]; then
    echo "SAGE_LOCAL undefined - exiting..."
    echo "Maybe run 'sage -sh'?"
    exit 1
fi

# Helper functions
success() {
    if [ $? -ne 0 ]; then
        echo "Error building Sphinx: '$1'"
        exit 1
    fi
}

CUR=`pwd`


cd src

# Install new version
echo "Installing Sphinx..."
$PIP_INSTALL .
success 'Error installing Sphinx'
echo

cd "$CUR"
echo "Creating grammar pickle..."
# Note: Setting PYTHONPATH here is something of a hack to support
# installation into $SAGE_DESTDIR.  This might be better handled
# as a post-install step
SITE_PACKAGES="$(sage-python23 -c 'import site; print(site.getsitepackages()[0])')"
PYTHONPATH="$SAGE_DESTDIR$SITE_PACKAGES" sage-python23 create_grammar_pickle.py
success 'Error creating the grammar pickle'
echo

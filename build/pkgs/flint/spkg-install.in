if [ "$SAGE_DEBUG" = "yes" ]; then
    echo "Building a debug version of FLINT."
    FLINT_TUNE=" $FLINT_TUNE"; export FLINT_TUNE
    FLINT_CONFIGURE="--enable-assert $FLINT_CONFIGURE"
fi

cd src

## mkdir build

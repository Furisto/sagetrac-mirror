## cmake -G"Unix Makefiles" -DWITH_NTL=yes -DBUILD_TESTING=yes -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX="${SAGE_INST_LOCAL}" -DCMAKE_INSTALL_LIBDIR=lib ..
sdh_cmake -G"Unix Makefiles" -DWITH_NTL=yes -DBUILD_TESTING=yes -DCMAKE_BUILD_TYPE=Release
sdh_make

echo "Deleting old FLINT files."
rm -f $SAGE_LOCAL/lib/libflint*

#!/usr/bin/env bash

if [ -z "$SAGE_LOCAL" ]; then
    echo >&2 "SAGE_LOCAL undefined ... exiting"
    echo >&2 "Maybe run 'sage --sh'?"
    exit 1
fi

cd src

# Apply patches.  See SPKG.txt for information about what each patch
# does.
for patch in ../patches/*.patch; do
    [ -r "$patch" ] || continue  # Skip non-existing or non-readable patches
    patch -p1 <"$patch"
    if [ $? -ne 0 ]; then
        echo >&2 "Error applying '$patch'"
        exit 1
    fi
done


if [ "$SAGE_DEBUG" = "yes" ]; then
    echo "Building a debug version of mmx."
    export CFLAGS="-O0 -g $CFLAGS"
else
    export CFLAGS="-O2 -g $CFLAGS"
fi

if [ "$SAGE64" = "yes" ]; then
    echo "Building a 64-bit version of gf2x."
    export ABI=64
    CFLAGS="-m64 $CFLAGS"
fi


echo "Configuring mmx."
./configure --prefix="$SAGE_LOCAL" --libdir="$SAGE_LOCAL/lib" \
    --enable-algebramix \
    --with-gmp="$SAGE_LOCAL" --with-mpfr="$SAGE_LOCAL"
if [ $? -ne 0 ]; then
    echo >&2 "Error: Failed to configure mmx."
    exit 1
fi

echo "Building mmx."
$MAKE
if [ $? -ne 0 ]; then
    echo >&2 "Error: Failed to build mmx."
    exit 1
fi

echo "Deleting old mmx files."
rm -f "$SAGE_LOCAL"/lib/libmmx*
rm -rf "$SAGE_LOCAL"/include/mmx*

echo "Installing mmx."
$MAKE install
if [ $? -ne 0 ]; then
    echo >&2 "Error: Failed to install mmx."
    exit 1
fi
